#include <bits/stdc++.h>

using namespace std;

// Complete the staircase function below.
void staircase(int n) {

    //라인 반복문
    for(int i=1;i<=n;++i){
        //공백 반복문
        for(int j=1;j<=n-i;++j){
            cout <<" ";
            }
        //#개수 반복문
        for(int x=1;x<=i;++x){
            cout << "#";
            }   
            cout << endl;
        }
       

    


}

int main()
{
    int n;
    cin >> n;
    cin.ignore(numeric_limits<streamsize>::max(), '\n');

    staircase(n);

    return 0;
}

